<!DOCTYPE html>
<html>
	<head>
  		<title>Oficina de Gestion de desempe√±o</title>
  		    <script type="text/javascript">var base_url='<%= root_url %>';</script>
			<%= stylesheet_link_tag :defaults, 'layout', 'login', 'jquerytools' %>  		
			<%= javascript_include_tag :defaults, 'best_in_place','jquery.tools.min','jqueryvalidations', :others %>
			<%= yield :javascript %>
			<%= yield :styles %>

  		<%= csrf_meta_tag %>
	</head>
	<body>
		<header>
			<% if user_signed_in? %>
				<% if params[:controller]!="home" && params[:action]!="confirm"  %>
					<%= render :partial => 'layouts/header_context' %>
				<% end %>	
				<% if params[:controller]=="home" && params[:action]=="confirm"  %>
					<h1>Performa</h1>
				<% end %>
			<% else %>
				<h1>Performa</h1>
			<% end %>
		</header>
		
		<div class="main-content on-3 columns">
			<% if params[:controller]!="home" && params[:action]!="confirm"  %>
				<%= render(:partial => 'shared/main_menu') if user_signed_in? %>
			<% end %>
				<div id="errors">
  <h2>Hemos encontrado algunos errores!</h2>
</div>
			<div class="messages">
				<p id="notice" class="flash centered"><%= notice %></p>
	    	<p id="alert" class="flash centered"><%= alert %></p>
	
			</div>

      <div class="column fixed" style="width: 200px">
        <br/>
      </div>
			
			<div class="column fixed" style="width: 780px">
				<%= yield %>		
      </div>
				
			<div class="column fixed" style="width: 250px">
				<%= yield :contextual_legend %>
			</div>
		</div>
	</body>
</html>
