<!DOCTYPE html>
<html>
	<head>
  		<title>Oficina de Gestion de desempe√±o</title>
  		
			<%= stylesheet_link_tag :defaults, 'layout', 'login' %>  		
			<%= javascript_include_tag :defaults, :others %>

  		<%= csrf_meta_tag %>
	</head>
	<body>
		<header>
			<% if user_signed_in? %>
				<%= render :partial => 'layouts/header_context' %>
			<% else %>
				<h1>Performa</h1>
			<% end %>
		</header>
		
		<p id="notice" class="flash centered"><%= notice %></p>
    <p id="alert" class="flash centered"><%= alert %></p>
		
		<div class="main-content on-3 columns">
			
			<%= render(:partial => 'shared/main_menu') if user_signed_in? %>
			
			<div class="column fixed" style="width: 200px">
				<br/>
			</div>
				
			<div class="column fixed" style="width: 780px">
				<%= yield %>		
			</div>
				
			<div class="column elastic" style="width: 250px">
				<%= yield :message %>
			</div>

		</div>
	</body>
</html>