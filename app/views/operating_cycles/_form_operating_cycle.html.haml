= nested_form_for @operating_cycle do |f|
	= f.hidden_field :user_id, :value => current_user.id
	= f.hidden_field :company_id,:value =>  current_company.id
	= f.label :name, t('views.operating_cycle.name')
	%br
	= f.text_field :name
	%br
	= f.label :reason, t('views.operating_cycle.reason')
	%br
	= f.text_area :reason
	%br
	= f.label :internal_id, t('views.operating_cycle.internal_id')
	%br
	= f.text_field :internal_id
	%br
	= render :partial => 'clients', :locals => {:f => f}
	%br
	= render :partial => 'services', :locals => {:f => f}
	%br
	= render :partial => 'key_activities', :locals => {:f => f}
	= render :partial => 'strategic_line'
	= render 'shared/notifications'
	%div.actions
		= link_to t('views.operating_cycle.cancel'), operating_cycles_path, :class => 'button gray'
		=	f.submit t('views.operating_cycle.submit'), :class => 'button orange as-link'
		
		