%label
	%strong
		= t('views.operating_cycle.services')
%br
%br
.align-right.right{:style=>"width:100%"}
	%input{:id=>"services_input", :style=>"width:100%"}		
	%br
	= link_to t('views.operating_cycle.add_service'), "", :id=>"add_service"
	%br
	%br
.clear	
#services
	-index=0
	%ul{:id=>"services_ul"}
		= f.fields_for :services do |client|
			-classs=index%2==0 ? "light-gray" : "gray" 
			%li{:rel=>"#{index}"}
				%div{:id=>"operating_cycle_services_attributes_#{client.object.id}_div_#{index}", :class=>"#{classs}"}
					.left
						= client.text_field :name, :class => 'no_edit_input', :disabled=>:disabled, :size=>"88"
						= client.hidden_field :torder
						%a{:id=>"operating_cycle_services_attributes_#{index}_name_close",:rel=>"operating_cycle_services_attributes_#{index}_name",:class=>"close hidden",  :href=>""}
							=image_tag "close.png"

					.right
						%a{:rel=>"operating_cycle_services_attributes_#{index}_name",:class=>"modify",  :href=>""}
							=image_tag "editar_ico_up.png", :class=>"button_to_edit", :alt=>"Borrar_ico_up"	
						%a{:rel=>"operating_cycle_services_attributes_#{client.object.id}_div_#{index}",:class=>"delete",  :href=>""}
							=image_tag "borrar_ico_up.png", :class=>"button_to_delete", :alt=>"Borrar_ico_up"
					.clear	
				-index=index+1