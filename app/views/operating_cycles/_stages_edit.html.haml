%label
	%strong
		= t('views.operating_cycle.stages')
%br
%br
.align-right.right{:style=>"width:100%"}
	%input{:id=>"stages_input", :style=>"width:100%"}		
	%br
	= link_to t('views.operating_cycle.add_stage'), "", :id=>"add_stage"
.clear
#stages
	-index=0

	= f.fields_for :stages do |client|			
		-classs=index%2==0 ? "light-gray" : "gray" 
		%div{:id=>"operating_cycle_clients_attributes_#{index}_div", :class=>"#{classs}"}
			.left
				= client.text_field :name, :class => 'no_edit_input'
			.right
				%a{:rel=>"operating_cycle_stages_attributes_#{index}_name",:class=>"modify",  :href=>""}
					=image_tag "editar_ico_up.png", :class=>"button_to_edit", :alt=>"Borrar_ico_up"
				%a{:rel=>"operating_cycle_clients_attributes_#{index}_div",:class=>"delete",  :href=>""}
					=image_tag "borrar_ico_up.png", :class=>"button_to_delete", :alt=>"Borrar_ico_up"
			.clear
			.steps_container
				%label
					%strong
						=t('views.operating_cycle.steps')
				%br
				%br
				%div{:class=>"align-left left", :style=>"width:100%"}
					%input{:id=>"steps_#{index}_input", :style=>"width:80%"}
					%a{:id=>"add_step_#{index}",:rel=>"#{index}",:href=>"", :class=>"add_step"}
						=t('views.operating_cycle.add_step')
				.clear	
				%br	
				%div{:id=>"steps_#{index}"}	
					-index2=0
					-classs=index2%2==0 ? "light-gray" : "gray" 
					= client.fields_for :steps do |step|
						%div{:id=>"operating_cycle_clients_attributes_#{index}_stages_#{step.object.id}_div", :class=>"#{classs}"}
							.left
								= step.text_field :name, :class => 'no_edit_input', :size=>50
							.right
								%a{:rel=>"operating_cycle_stages_attributes_#{index}_steps_attributes_#{index2}_name",:class=>"modify",  :href=>""}
									=image_tag "editar_ico_up.png", :class=>"button_to_edit", :alt=>"Borrar_ico_up"
								%a{:rel=>"operating_cycle_clients_attributes_#{index}_stages_#{step.object.id}_div",:class=>"delete",  :href=>""}
									=image_tag "borrar_ico_up.png", :class=>"button_to_delete", :alt=>"Borrar_ico_up"
							.clear
						-index2=index2+1 		
				.clear
				%br		
		-index=index+1
		
		