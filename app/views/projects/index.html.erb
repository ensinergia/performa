<div class="box rounded-10 with-shadow with-mid-width">
<%= content_for(:pro_submenu, &Proc.new { "selected" }) %>
<%= content_for(:proj_menu, &Proc.new { "selected" }) %>

<div class="title-bar rounded-10-top">
	<ul class="items-inlined">
		<li class="<%= yield(:pro_submenu) %>"><%= link_to t('views.projects.submenu.project'), projects_url %></li>
		<li class="<%= yield(:plan_submenu) %>"><%= link_to t('views.projects.submenu.planning'), projects_url %></li>
		<li class="<%= yield(:fol_submenu) %>"><%= link_to t('views.projects.submenu.follow'), projects_url %></li>
	</ul>
</div>  


	
	<div class="inside-box">
		<%= render :partial => 'project', :collection => @projects %>
		
		<div class='strategic_add_link'>
			<%= link_to t('views.projects.index.not_empty.controls.add'), new_project_path %>
		</div>
	</div>
</div>

<%= content_for :contextual_legend do %>

	<div class="help">
		<div class="title">
			<p><%=t 'views.help.title' %></p>
		</div>
	
		<!--This form will trigger after the page has finished loading. It will retrieve the contextual menu for the current URL path-->

		<div class="contextual">
			<%= form_tag contextual_legends_show_path, :remote => true, :id => "contextual-show-action-form" do %>
				<%= hidden_field_tag :route, "#{request.env['PATH_INFO']}#non_empty" %>
			<% end %>
		</div>
	</div>

<% end %>
