.light-gray.padding_10px
	.left
		%label
			%strong
				= t("views.projects.section_#{type}s")
	.clear		
	%br
	%br
	-if type=="project_task"
		.left{:style=>"width:95%"}
			%input{:id=>"#{type}s_input", :style=>"width:60%", :class=>:add_input, :value=>t("views.projects.add_#{type}"), :rel=>"#{type}"}
			%input{:id=>"#{type}s_date_input", :style=>"width:20%", :class=>"add_input date_input", :value=>"Fecha", :type=>:date}		
			=link_to "Agregar otro", "", :id=>"add_#{type}", :class=>"hidden"
	-else		
		.left{:style=>"width:95%"}
			%input{:id=>"#{type}s_input", :style=>"width:60%", :class=>:add_input, :value=>t("views.projects.add_#{type}"), :rel=>"#{type}"}		
			= link_to "Agregar otro", "", :id=>"add_#{type}", :class=>"hidden"
	.clear
	%br	
	%div{:id=>"#{type}s", :class=>"hidden"}
		%ul{:id=>"#{type}s_ul"}