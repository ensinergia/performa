if($('div#comment-<%= @comment.id %>').siblings().length == 0) {
	$('div#comments .links').html('<%= escape_javascript(render_links_for_comments_number 0) %>').hide().fadeIn('slow');
} else {
	$('div#comments .links .number').html($('div#comment-<%= @comment.id %>').siblings().length);
}

$('div#comment-<%= @comment.id %>').fadeOut('slow').delay(2000).remove();
