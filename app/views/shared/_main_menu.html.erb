	<li ><%= link_to '<< Regresar', area_select_path(:area_id=>@selected_area.parent_id), :class=>'back_menu'%></li>
	<li class="<%= yield(:pa_menu) %>"><%= link_to '', area_panorama_url(), :class => "panorama-btn", :id => "panorama-menu" %></li>
