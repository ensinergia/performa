<div id="menu-content" class="with-shadow">
<% if session['area_id']=='' || session[:area_id].to_s==session[:main_area_id].to_s%>

<ul class="menu centered ">
	<li class="<%= yield(:pa_menu) %>"><%= link_to '', panorama_url(with_current_subdomain), :class => "panorama-btn", :id => "panorama-menu" %></li>
	<li class="<%= yield(:di_menu) %>"><%= link_to '', creed_visions_url(with_current_subdomain), :class => "direction-btn", :id => "direction-menu" %></li>
