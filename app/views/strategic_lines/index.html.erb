<div class="box rounded-10 with-shadow with-mid-width">
  
	<%= content_for(:sl_menu, &Proc.new { "selected" }) %>
	
	<div class="title-bar rounded-10-top">
		<h2><%= t('views.strategic_lines.index.not_empty.title') %></h2>
  </div>
	
	<div class="inside-box">
		<% @strategic_lines.each do |sl| %>
				<div id="sl-<%= sl.id %>">
					<%= sl.content %>
					<%= record_info_for(sl) %>
					
					<%= render :partial => 'comments/index', :locals => { :comments => sl.comments } %>
					
					<div id="new-comment-for-commentable" class="hidden">
						<%= render :partial => 'comments/new', :locals => {:commentable => sl} %>
					</div>
					
					<%= button_to 'Eliminar', sl, :method => :delete, 
												  :confirm => t('views.common.messages.delete.confirm', :connector => "Ã©sta", :model => t('activerecord.models.strategic_line')), 
												  :class => 'delete' %>
					<%= link_to 'Modificar', edit_strategic_line_path(sl), :class => 'modify' %>
				</div>
		<% end %>		
			
		<%= link_to t('views.strategic_lines.index.not_empty.controls.add'), new_strategic_line_path, :class => "button orange" %>
	</div>
</div>

<%= content_for :contextual_legend do %>

	<div class="help">
		<div class="title">
			<p><%=t 'views.help.title' %></p>
		</div>
	
		<!--This form will trigger after the page has finished loading. It will retrieve the contextual menu for the current URL path-->

		<div class="contextual">
			<%= form_tag contextual_legends_show_path, :remote => true, :id => "contextual-show-action-form" do %>
				<%= hidden_field_tag :route, "#{request.env['PATH_INFO']}#non_empty" %>
			<% end %>
		</div>
	</div>

<% end %>
