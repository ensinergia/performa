<div class="box rounded-10 with-shadow with-mid-width">
	
	<div class="inside-box">

		<div class="title-bar">
			<p><%=t 'views.people.non_empty.title', :company => current_user.company.name %></p>
			
			<%= link_to t('views.people.non_empty.controls.add_area'), new_area_path, :class => "button orange" %>
		</div>
		
		<% @areas.each do |area| %>
			<div id="area-<%= area.id %>">
				<div class="area-title">
					<%= area.name %>
					<%= link_to '', '', :class => "modify" %>
				</div>
				
				<% area.users.each do |user| %>
					<%= render user %>
				<% end %>
				
				<%= link_to '', new_person_path, :class => "add" %>
			</div>
		<% end %>			
			
	</div>
</div>

<%= content_for :contextual_legend do %>

	<div class="help">
		<div class="title">
			<p><%=t 'views.help.title' %></p>
		</div>

		<div class="contextual">
			<%= form_tag contextual_legends_show_path, :remote => true, :id => "contextual-show-action-form" do %>
				<%= hidden_field_tag :route, "#{request.env['PATH_INFO']}#non_empty" %>
			<% end %>
		</div>
	</div>

<% end %>