<div class="box rounded-10 with-shadow with-mid-width">
		
	<div class="inside-box">
		<!-- Image space -->
		<h1><%= t('views.people.first_view.title') %></h1>
		
		<div class="contextual">
			<%= form_tag contextual_legends_show_path, :remote => true, :id => "contextual-show-action-form" do %>
				<%= hidden_field_tag :route, "#{request.env['PATH_INFO']}#empty" %>
			<% end %>
		</div>
				
		<%= link_to t('views.people.first_view.controls.add'), 
					  new_person_url(with_current_subdomain), 
					  :method => :get, :class => "button orange" %>
	</div>
</div>