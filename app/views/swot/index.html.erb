<div class="box rounded-10 with-shadow max-inner-width">
	
	<%= content_for(:sw_menu, &Proc.new { "selected" }) %>
	
	<%= render 'swot/shared/menu' %>	
	
	<div class="inside-box">
		<div class="foda-img image"></div>
		
		<div class="text-content">
			<h1><%= t('views.swot.first_view.title') %></h1>
		
			<div class="contextual">
				<%= form_tag contextual_legends_show_path, :remote => true, :id => "contextual-show-action-form" do %>
					<%= hidden_field_tag :route, "#{request.env['PATH_INFO']}" %>
				<% end %>
			</div>
		</div>
		<%= link_to t('views.swot.first_view.controls.start'), 
					  internal_swot_analyses_url(with_current_subdomain), 
					  :method => :get, :class => "button orange start-button" %>
	</div>
</div>


