<div class="box rounded-10 with-shadow with-mid-width">
	
	<div class="inside-box">

		<div class="title-bar">
			<p><%=t 'views.people.non_empty.title', :company => current_user.company.name %></p>
		</div>
		
		<% nested_form_for @area do |a| %>
			<h1><%=t 'views.people.new.title' %></h1>
			
			<%= render :partial => 'shared/errors', 
							 :locals => {:message_error => t('views.creed.most_views.form_errors'), :object => @area} %>
			
			<%= a.text_field :name %>

			<div id="sesiones">
					<h1><%=t 'views.people.new.functions' %></h1>

			    <%= render :partial => 'functions/form', :locals => {:a => a} %>
					
			    <%= a.link_to_add t('views.people.new.controls.add_function'), :functions %>
			</div>
			<br/><br/>
			<%= a.submit t('views.people.new.controls.save') %>
		<% end %>
		
	</div>
</div>

<%= content_for :contextual_legend do %>

	<div class="help">
		<div class="title">
			<p><%=t 'views.help.title' %></p>
		</div>

		<div class="contextual">
			<%= form_tag contextual_legends_show_path, :remote => true, :id => "contextual-show-action-form" do %>
				<%= hidden_field_tag :route, "#{request.env['PATH_INFO']}" %>
			<% end %>
		</div>
	</div>

<% end %>