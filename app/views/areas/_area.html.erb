		<span><%= area.name %></span>
		<div class="right-placed">
			<%= link_to(t('views.area.index.controls.admin_list'), areas_admin_url) if area.is_root? %>
			<%= link_to '', edit_area_path(area), :id => "modify" %>
		</div>
	</div>
	<%=  %>
	<% area.users.each do |user| %>
		<%= render user %>
	<% end %>
	
	<%= link_to '', new_person_path, :class => "add" %>
</div>