	<%= link_to t('views.help.show.controls.add'), new_admin_contextual_legend_path, :class => "contextual-link" %>
<% else %>

	<%= BlueCloth.new(@contextual_legend.content).to_html.html_safe %>
	
	<%= link_to t('views.help.show.controls.edit'), edit_admin_contextual_legend_path(@contextual_legend), :class => "contextual-link" %>
<% end %>

