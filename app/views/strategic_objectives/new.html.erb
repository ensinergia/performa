<div class="box rounded-10 with-shadow with-mid-width">

  <div class="inside-box">
	
    <!-- Image space -->
    <h1><%= t('views.strategic_objectives.new.title') %></h1>
		<%= render :partial => 'shared/errors', 
						 :locals => {:message_error => t('views.creed.most_views.form_errors'), :object => @strategic_objective} %>
    <%= form_for @strategic_objective do |f| %>
      <%= f.text_field :content %><br/>

      <h1><%= t('views.strategic_objectives.new.strategic_lines') %></h1>
      <ul>
        <% @strategic_lines.each do |strategic_line| %>
          <li>
            <%= check_box_tag "strategic_objective[strategic_line_ids][]", strategic_line.id, strategic_objective_include_strategic_line?(f.object, strategic_line) -%>
            <%= label_tag "strategic_objective_strategic_line_ids_", strategic_line.content -%>
          </li>
        <% end %>
      </ul>

      <%= render 'shared/notifications' %>

      <%= f.submit t('views.strategic_objectives.new.controls.save') %>
      <%= link_to t('views.strategic_objectives.new.controls.cancel'), strategic_objectives_path %>
    <% end %>		

  </div>
</div>


<%= content_for :contextual_legend do %>
	<%= render 'contextual_legends/contextual_legend' %>
<% end %>
