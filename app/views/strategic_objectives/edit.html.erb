<%= link_to 'Back', strategic_objectives_path %>
<div class="box rounded-10 with-shadow with-mid-width">
	
	<div class="inside-box">
		<!-- Image space -->
		<h1><%= t('views.strategic_objectives.edit.title') %></h1>
		
		<%= form_for @strategic_objective, :html => { :method => :put } do |f| %>
			<%= f.text_field :content %><br/>
			<span class="updated-pragma">Última actualización : <%= record_info_for(@strategic_objective) %></span>
			
      <h1><%= t('views.strategic_objectives.new.strategic_lines') %></h1>
      <ul>
        <% @strategic_lines.each do |strategic_line| %>
          <li>
          <%= check_box_tag "strategic_objective[strategic_line_ids][]", strategic_line.id, strategic_objective_include_strategic_line?(f.object, strategic_line) -%> <%= strategic_line.content -%>
          </li>
        <% end %>
      </ul>
			
			<%= f.submit t('views.strategic_objectives.edit.controls.save') %>
			<%= link_to t('views.strategic_objectives.edit.controls.cancel'), '' %>
		<% end %>		
			
	</div>
</div>

<%= content_for :message do %>
	<div class="help">
		<div class="title">
			<p><%= I18n.t('views.common.help.title') %></p>
		</div>
		
		<p class="subtitle"><%=t 'views.menu.strategic_objectives' %></p>

	</div>
<% end %>
