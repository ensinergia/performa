<%= render 'creed/shared/menu' %>	

<div class="inside-box">
	<!-- Image space -->
	<div class ="creed_description">
    <div class="creed_description_first">
		  <h4><%=t "activerecord.models.#{creed.class.to_s.downcase}" %></h4>
      <p><%= record_info_for(creed) %></p>
    </div>
    <div class="pbutton pencil">
		  <%= link_to t('ii'), eval("edit_creed_#{creed.class.to_s.underscore.downcase}_path(creed)"), :method => :get %>
    </div>
	</div>
  <div class="creed_description_desc">
	  <p><%= creed.description %></p>
  </div>
	<%= render :partial => 'comments/index', :locals => { :comments => creed.comments } %>

	<div id="new-comment-for-commentable" class="hidden">
		<%= render :partial => 'comments/new', :locals => {:commentable => creed} %>
	</div>
</div>
